{
  "manifest_version": 3,
  "name": "Pointfour Fashion Assistant",
  "version": "2.0.0",
  "description": "Proactive fashion brand fit information and reviews on fashion websites",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.zara.com/*",
    "https://*.hm.com/*",
    "https://*.asos.com/*",
    "https://*.reformation.com/*",
    "https://*.everlane.com/*",
    "https://*.cos.com/*",
    "https://*.uniqlo.com/*",
    "https://*.mango.com/*",
    "https://*.topshop.com/*",
    "https://*.riverisland.com/*",
    "https://*.newlook.com/*",
    "https://*.boohoo.com/*",
    "https://*.prettylittlething.com/*",
    "https://*.missguided.com/*",
    "https://*.nastygal.com/*",
    "https://*.farfetch.com/*",
    "https://*.net-a-porter.com/*",
    "https://*.ssense.com/*",
    "https://*.matchesfashion.com/*",
    "https://*.selfridges.com/*",
    "https://*.harrods.com/*",
    "https://*.libertylondon.com/*",
    "https://*.johnlewis.com/*",
    "https://*.debenhams.com/*",
    "https://*.houseoffraser.com/*",
    "https://*.marksandspencer.com/*",
    "https://*.next.co.uk/*",
    "https://*.riverisland.com/*",
    "https://*.warehouse.co.uk/*",
    "https://*.oasis-stores.com/*",
    "https://*.whistles.com/*",
    "https://*.reiss.com/*",
    "https://*.tedbaker.com/*",
    "https://*.karenmillen.com/*",
    "https://*.coastfashion.com/*",
    "https://*.monsoon.co.uk/*",
    "https://*.accessorize.com/*",
    "https://*.dorothyperkins.com/*",
    "https://*.evans.co.uk/*",
    "https://*.wallis.co.uk/*",
    "https://*.burton.co.uk/*",
    "https://*.topman.com/*",
    "https://*.riverisland.com/*",
    "https://*.newlook.com/*",
    "https://*.boohoo.com/*",
    "https://*.prettylittlething.com/*",
    "https://*.missguided.com/*",
    "https://*.nastygal.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.zara.com/*",
        "https://*.hm.com/*",
        "https://*.asos.com/*",
        "https://*.reformation.com/*",
        "https://*.everlane.com/*",
        "https://*.cos.com/*",
        "https://*.uniqlo.com/*",
        "https://*.mango.com/*",
        "https://*.topshop.com/*",
        "https://*.riverisland.com/*",
        "https://*.newlook.com/*",
        "https://*.boohoo.com/*",
        "https://*.prettylittlething.com/*",
        "https://*.missguided.com/*",
        "https://*.nastygal.com/*",
        "https://*.farfetch.com/*",
        "https://*.net-a-porter.com/*",
        "https://*.ssense.com/*",
        "https://*.matchesfashion.com/*",
        "https://*.selfridges.com/*",
        "https://*.harrods.com/*",
        "https://*.libertylondon.com/*",
        "https://*.johnlewis.com/*",
        "https://*.debenhams.com/*",
        "https://*.houseoffraser.com/*",
        "https://*.marksandspencer.com/*",
        "https://*.next.co.uk/*",
        "https://*.warehouse.co.uk/*",
        "https://*.oasis-stores.com/*",
        "https://*.whistles.com/*",
        "https://*.reiss.com/*",
        "https://*.tedbaker.com/*",
        "https://*.karenmillen.com/*",
        "https://*.coastfashion.com/*",
        "https://*.monsoon.co.uk/*",
        "https://*.accessorize.com/*",
        "https://*.dorothyperkins.com/*",
        "https://*.evans.co.uk/*",
        "https://*.wallis.co.uk/*",
        "https://*.burton.co.uk/*",
        "https://*.topman.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pointfour Fashion Assistant"
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": ["widget.html", "widget.js", "widget-styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
